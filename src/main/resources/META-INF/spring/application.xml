<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
  default-autowire="byName" >

  <bean class="com.github.acme.spring.GreetingApp" />

  <bean id="greeting"  class="com.github.acme.spring.SimpleGreetingService"
  p:msg="menjunk enni" p:count="3"  autowire-candidate="true"  init-method="myInit" />
  
  <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
  p:basenames="messages,errors"
  />

  <bean name="greetingService" class="com.github.acme.spring.I18NGreetingService" p:locale="de" />

</beans>
